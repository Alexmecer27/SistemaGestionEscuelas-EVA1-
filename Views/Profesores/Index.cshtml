@model IEnumerable<SistemaGestionEscuelas.Models.Profesor>

@{
    ViewData["Title"] = "Profesores";
}

<h1 class="mb-4 text-primary">Lista de Profesores</h1>

<div class="mb-3">
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-plus-lg"></i> Agregar Profesor
    </a>
</div>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover align-middle">
        <thead class="table-primary text-center">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Especialidad</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var profesor in Model)
            {
                <tr class="text-center">
                    <td>@profesor.Nombre</td>
                    <td>@profesor.Apellido</td>
                    <td>@profesor.Especialidad</td>
                    <td>@profesor.Email</td>
                    <td>
                        <a class="btn btn-sm btn-primary me-1" asp-action="Edit" asp-route-id="@profesor.ProfesorId">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a class="btn btn-sm btn-info me-1" asp-action="Details" asp-route-id="@profesor.ProfesorId">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@profesor.ProfesorId">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Iconos de Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">