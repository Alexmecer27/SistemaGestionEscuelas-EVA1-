@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron bg-primary text-white rounded-4 p-5 mb-5 shadow-lg text-center">

    <!-- Imagen centrada -->
    <img src="~/images/escuela.jpg" alt="Escuela" class="img-fluid rounded-circle mb-4" style="max-width: 200px;">

    <h1 class="display-3 fw-bold mb-3">¡Bienvenido al Sistema de Gestión de Escuelas de Ronald!</h1>
    <h2 class="display-5 fw-semibold mb-3 text-warning">Psdta: ya pongame mi 10 inge 😎</h2>

