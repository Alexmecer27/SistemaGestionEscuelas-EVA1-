    <a class="btn btn-light btn-lg fw-bold" asp-controller="Estudiantes" asp-action="Index">
        <i class="bi bi-mortarboard-fill"></i> Ver Estudiantes
    </a>
    <a class="btn btn-light btn-lg fw-bold ms-2" asp-controller="Profesores" asp-action="Index">
        <i class="bi bi-people-fill"></i> Ver Profesores
    </a>
</div>

